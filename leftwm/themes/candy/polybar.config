[colors]
background = #282828
background-alt = #373B41
foreground = #ebdbb2
primary = #F0C674
secondary = #8ABEB7
alert = #a54242
disabled = #707880
;light blue = #7fa2ac
;dark gray = #83a598
;dark0 = #0d0e0f
;dark = #202020
;background dark = #242424
;background light = #32302f
;gray = #dedede
;medium gray = #504945
;comment = #665c54
;milk = #e7d7ad
;error red = #cc241d
;red = #fb4934
;orange = #d65d0e
;bright yellow = #fabd2f
;soft yellow = #eebd35
;pink = #d4879c
;magenta = #b16286
;soft green = #98971a
;forest green = #689d6a
;clean green = #8ec07c
;blue gray = #458588

[bar/barbase]
width = 100%
height = 24

monitor = ${env:monitor}
fixed-center = true
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

padding-right = 1

module-margin-left = 1
module-margin-right = 1

separator = |
separator-foreground = ${colors.disabled}

font-0 = "SauceCodePro Nerd Font:size=11:weight=semibold;3"

modules-right = filesystem memory cpu battery date

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

[bar/mainbar0]
inherit = bar/barbase
modules-left = xworkspaces layouts xwindow
tray-position = right
tray-detached = false
tray-maxsize = 14
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 5
tray-scale = 1.0
tray-radius = 6
;tray-foreground = #ebdbb2
tray-background = ${color.tray-background}

[bar/mainbar1]
inherit = bar/barbase
modules-left = xworkspaces layouts2 xwindow

[module/xworkspaces]
type = internal/xworkspaces
enable-scroll = true
reverse-scroll = true

label-active = %index%
label-active-foreground = ${colors.foreground}
label-active-background = ${colors.background-alt}
label-active-underline= #fb4934
label-active-padding-left = 6px
label-active-padding-right = 6px
label-active-margin = 2px

label-occupied = %index%
label-occupied-foreground = ${colors.foreground}
label-occupied-underline = #51afef
;label-occupied-underline = #a7a22d
;label-occupied-background = ${colors.background-alt}
label-occupied-padding-left = 6px
label-occupied-padding-right = 6px
label-occupied-margin = 2px

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 6px
label-urgent-margin = 2px

label-empty = %index%
label-empty-foreground = ${colors.foreground}
label-empty-padding-left = 6px
label-empty-padding-right = 6px
label-empty-margin = 2px

; icon-0 = 1;
; icon-1 = 2;
; icon-2 = 3;
; icon-3 = 4;
; icon-4 = 5;
; icon-5 = 6;
; icon-6 = 7;
; icon-7 = 8;
; icon-8 = 9;
; icon-default =


[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%
label-foreground = #a9ac26
;background = #fb4934

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#F0C674}%{F-} %percentage_used%%
;label-mounted = %{F#eebd35}HD:%{F-} %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.disabled}
label-mounted-underline = #eebd35

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
;format-prefix = "RAM: "

format-prefix-foreground = #b16286
format-prefix-underline = #b16286
label = %percentage_used:2%%
label-underline = #b16286

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
;format-prefix = "CPU: "
format-prefix-foreground = #fb4934
format-prefix-underline = #fb4934
label = %percentage:2%%
label-underline = #fb4934

[module/date]
type = internal/date
interval = 1

time = %H:%M
date = %d/%m/%y
label = %{F#51afef}%date%%{F-} %{F#51afef}(%{F-}%time%%{F#51afef})%{F-}
label-underline = #51afef

[settings]
screenchange-reload = true
pseudo-transparency = true

; vim:ft=dosini
[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 100

format-charging = <animation-charging> <label-charging>
label-charging = ‎ %percentage%%
format-charging-foreground = ${colors.foreground}
format-charging-background = ${colors.background}
format-charging-underline = #a3c725

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = ‎ %percentage%%
format-discharging-underline = #c7ae25
format-discharging-foreground = ${colors.foreground}
format-discharging-background = ${colors.background}

format-full-prefix = " "
format-full-prefix-foreground = #a3c725
format-full-underline = #a3c725
format-full-foreground = ${colors.foreground}
format-full-background = ${colors.background}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = #c7ae25

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = #a3c725
animation-charging-framerate = 750

[module/layouts]
type = custom/script
exec = sleep 1 && layout1
tail = true
label-foreground = #fb4934

[module/layouts2]
type = custom/script
exec = sleep 1 && layout2
tail = true
label-foreground = #fb4934


[module/spotify1]
type = custom/script
exec = ~/.config/polybar/scripts/spotify1.sh
interval = 1

format-background = ${colors.background}
format-padding = 1
;format-underline = #0f0
format-prefix = "  "
format-prefix-foreground = #0f0
label = %output:0:150%
;format-margin = 300px
